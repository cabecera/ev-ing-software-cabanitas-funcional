<%- include('../partials/header', { title: 'Crear Reporte' }) %>
<%- include('../partials/navbar') %>

<h1>Crear Reporte de Faltantes</h1>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-error"><%= error %></div>
<% } %>

<form method="POST" action="/reportes/crear" class="form">
    <div class="form-group">
        <label for="cabanaId">Cabaña:</label>
        <select id="cabanaId" name="cabanaId" required>
            <option value="">Seleccione una cabaña</option>
            <% cabanas.forEach(cabana => { %>
                <option value="<%= cabana.id %>"><%= cabana.nombre %></option>
            <% }); %>
        </select>
    </div>

    <div class="form-group">
        <label for="descripcion">Descripción:</label>
        <textarea id="descripcion" name="descripcion" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="itemsFaltantes">Items Faltantes (separados por comas):</label>
        <input type="text" id="itemsFaltantes" name="itemsFaltantes" placeholder="Item1, Item2, Item3">
    </div>

    <button type="submit" class="btn btn-primary">Crear Reporte</button>
    <a href="/reportes" class="btn btn-secondary">Cancelar</a>
</form>

<%- include('../partials/footer') %>




