<%- include('../partials/header', { title: 'Crear Usuario' }) %>
<%- include('../partials/navbar') %>

<h1>Crear Nuevo Usuario</h1>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-error"><%= error %></div>
<% } %>

<form method="POST" action="/users/crear" class="form">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
    </div>

    <div class="form-group">
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" required>
    </div>

    <div class="form-group">
        <label for="role">Rol:</label>
        <select id="role" name="role" required>
            <option value="">Seleccione un rol</option>
            <option value="admin">Admin</option>
            <option value="encargado">Encargado</option>
            <option value="cliente">Cliente</option>
            <option value="trabajador">Trabajador</option>
        </select>
    </div>

    <div id="clienteFields" style="display: none;">
        <h3>Datos del Cliente</h3>
        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre">
        </div>

        <div class="form-group">
            <label for="apellido">Apellido:</label>
            <input type="text" id="apellido" name="apellido">
        </div>

        <div class="form-group">
            <label for="telefono">Teléfono:</label>
            <input type="text" id="telefono" name="telefono">
        </div>

        <div class="form-group">
            <label for="direccion">Dirección:</label>
            <input type="text" id="direccion" name="direccion">
        </div>

        <div class="form-group">
            <label for="dni">DNI:</label>
            <input type="text" id="dni" name="dni">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Crear Usuario</button>
    <a href="/users" class="btn btn-secondary">Cancelar</a>
</form>

<script>
    document.getElementById('role').addEventListener('change', function() {
        const clienteFields = document.getElementById('clienteFields');
        if (this.value === 'cliente') {
            clienteFields.style.display = 'block';
            document.getElementById('nombre').required = true;
            document.getElementById('apellido').required = true;
        } else {
            clienteFields.style.display = 'none';
            document.getElementById('nombre').required = false;
            document.getElementById('apellido').required = false;
        }
    });
</script>

<%- include('../partials/footer') %>
